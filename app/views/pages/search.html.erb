<div class='col-xs-8'>
        <% for @p in @users %>
        <div class='panel panel-default user-panel'>
            <div class='panel-body row'>
                <div class='col-sm-2'>
                    <img src='/avatar.png' height='50px' width='50px'></img>
                </div>
                <div class='col-sm-6'>
                    <p class='post-title post-owner'><%= @p.username %></p>
                    <p class='post-content'><%= @p.email %></p>                   
                </div>
                <div class='col-sm-4'>
                    <%= render '/components/follow_button', :user => User.find_by_username(@p.username) %>
                </div>            
            </div>
        </div>
        <% end %>
    </div>