<div class='container-home row'>
    <div class='col-xs-4'>
        <div class='panel panel-default'>
            <div class='panel-body text-center'>
                <div class='row'>
                    <div class='col-sm-2'><img src='/avatar.png' height='50px' width='50px'></div>
                    <div class='col-sm-10'>
                        <h4 style='font-weight: bold'>
                            <%= link_to current_user.username, @profile, style:'color:black' %>
                        </h4>
                    </div>
                    <div class='col-sm-12' style='margin-top:10px'>
                        <div class='col-sm-3 stat-title'>POSTS<br>
                            <h6 class='stat-value'>16</h6>
                        </div>
                        <div class='col-sm-4 stat-title'>FOLLOWING<br>
                            <h6 class='stat-value'>16</h6>
                        </div>
                        <div class='col-sm-5 stat-title'>FOLLOWERS<br>
                            <h6 class='stat-value'>16</h6>
                        </div>
                    </div>                   
                </div>
            </div>
        </div>
    </div>
    <div class='col-xs-8'>
        <%= render '/components/post_form' %>
        <% for @p in @posts %>
        <div class='panel panel-default post-panel'>
            <div class='panel-body row'>
                <div class='col-sm-1'>
                    <img src='/avatar.png' height='50px' width='50px'></img>
                </div>
                <div class='col-sm-11'>
                    <p class='post-title'><span class='post-owner'><%= User.find(@p.user_id).username %></span><span class='post-creation'> - <%= @p.created_at.to_formatted_s(:short) %></span></p>
                    <p class='post-content'><%= @p.content %></p>
                </div>
                <div class='col-sm-12'>
                    <p class='post-links'>
                        <a href=''>View conversation</a>
                    </p>
                </div>            
            </div>
        </div>
        <% end %>
    </div>
</div>