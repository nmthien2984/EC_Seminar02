<div class='container-profile row'>
    <div class='col-xs-3'>
         <div class='panel panel-default'>
            <div class='panel-body'>
                <p>who to follow</p>
            </div>
        </div>
    </div>
    <div class='col-xs-7'>
        <%= render '/components/post_form' %>
        <% for @p in @posts %>
        <div class='panel panel-default post-panel'>
            <div class='panel-body row'>
                <div class='col-sm-1'>
                    <img src='/avatar.png' height='50px' width='50px'></img>
                </div>
                <div class='col-sm-11'>
                    <p class='post-title'><span class='post-owner'><%= User.find(@p.user_id).username %></span><span class='post-creation'> - <%= @p.created_at.to_formatted_s(:short) %></span></p>
                    <p class='post-content'><%= @p.content %></p>
                </div>
                <div class='col-sm-12'>
                    <p class='post-links'>
                        <a href=''>View conversation</a>
                    </p>
                </div>            
            </div>
        </div>
        <% end %>
    </div>
    <div class='col-xs-3'>
        <%= render '/components/follow_button', :user => User.find_by_username(params[:id]) %>
    </div>
</div>
