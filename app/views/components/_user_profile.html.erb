<div class='panel panel-default'>
    <div class='panel-body text-center'>
        <div class='row'>
            <div class='col-sm-2'><img src='/avatar.png' height='50px' width='50px'></div>
            <div class='col-sm-10'>
                <h4 style='font-weight: bold'>
                    <%= link_to user.username, @profile, style:'color:black' %>
                </h4>
            </div>
            <div class='col-sm-12' style='margin-top:10px'>
                <div class='col-sm-3 stat-title'>POSTS<br>
                    <h6 class='stat-value'><%= user.posts.count %></h6>
                </div>
                <div class='col-sm-4 stat-title'>FOLLOWING<br>
                    <h6 class='stat-value'><%= user.following.count %></h6>
                </div>
                <div class='col-sm-5 stat-title'>FOLLOWERS<br>
                    <h6 class='stat-value'><%= user.followers.count %></h6>
                </div>
            </div>
            <div class='col-sm-12'>
                <%= render '/components/follow_button', :user => User.find_by_username(params[:id]) %>   
            </div>
        </div>
    </div>
</div>